{
  "id": "community.rebels.hassio",
  "version": "1.0.3",
  "compatibility": ">=1.5.0",
  "sdk": 2,
  "name": {
    "en": "Hass.io"
  },
  "description": {
    "en": "Better zigbee, z-wave, bluetooth and more...."
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Bas Jansen",
    "email": "b@sjansen.email"
  },
  "capabilities": {
   "phone_docked": {
     "type": "enum",
     "title": {
       "en": "Phone",
       " nl": "Telefoon"
     },
     "options": {
        "icons": {
            "Heating_Demand": "/community.rebels.hassio/drivers/sensor/assets/phone_docked.svg"
        }
     },
     "getable": true,
     "setable": false,
     "values": [
       {
         "id": "Unplugged",
         "title": {
           "en": "Unplugged",
           "nl": "Losgekoppeld"
         }
       },
       {
         "id": "Charging",
         "title": {
           "en": "Charging",
           "nl": "Opladen"
         }
       },
       {
         "id": "Full",
         "title": {
           "en": "Full",
           "nl": "Opgeladen"
         }
       },
       {
         "id": "Unknown",
         "title": {
           "en": "Unknown",
           "nl": "Onbekend"
         }
       }
     ]
   },
   "phone_location": {
     "type": "boolean",
     "title": {
       "en": "Presence",
       "nl": "Aanwezigheid"
     },
     "getable": true,
     "setable": false,
        "label": {
            "true": {
                "en": "At Home",
                "nl": "Thuis"
            },
            "false": {
                "en": "Away",
                "nl": "Afwezig"
            }
        }
    }
 },
  "drivers": [
    {
    "id": "light",
    "name": {
      "en": "Light"
    },
    "class": "light",
    "capabilities": [
      "dim",
      "light_hue",
      "light_mode",
      "light_saturation",
      "light_temperature",
      "onoff"
    ],
    "images": {
      "large": "/drivers/light/assets/images/large.png",
      "small": "/drivers/light/assets/images/small.png"
    },
    "pair": [{
        "id": "list_devices",
        "template": "list_devices",
        "navigation": {
          "next": "add_devices"
        },
        "options": {
          "singular": false
        }
      },
      {
        "id": "add_devices",
        "template": "add_devices"
      }
    ]
  },
  {
    "id": "switch",
    "name": {
      "en": "Switch"
    },
    "class": "socket",
    "capabilities": [
      "onoff"
    ],
    "images": {
      "large": "/drivers/switch/assets/images/large.png",
      "small": "/drivers/switch/assets/images/small.png"
    },
    "pair": [{
        "id": "list_devices",
        "template": "list_devices",
        "navigation": {
          "next": "add_devices"
        },
        "options": {
          "singular": false
        }
      },
      {
        "id": "add_devices",
        "template": "add_devices"
      }
    ]
  },
  {
    "id": "sensor",
    "name": {
      "en": "Sensor"
    },
    "class": "sensor",
    "capabilities": [
      "alarm_smoke"
    ],
    "images": {
      "large": "/drivers/sensor/assets/images/large.png",
      "small": "/drivers/sensor/assets/images/small.png"
    },
    "pair": [{
        "id": "list_devices",
        "template": "list_devices",
        "navigation": {
          "next": "add_devices"
        },
        "options": {
          "singular": false
        }
      },
      {
        "id": "add_devices",
        "template": "add_devices"
      }
    ]
  }
  ]
}
